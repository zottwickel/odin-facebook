<% provide(title: "Send Reset") %>
<section class="hero is-light is-bold">
  <div class="hero-body">
		<h2 class="title">Resend unlock instructions</h2>

		<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

			<%= devise_error_messages! %>
			
		  <div class="field">
		    <%= f.label :email, class: "label" %>
		    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-info left-field" %>
		  </div>

		  <div class="control">
		    <%= f.submit "Resend unlock instructions", class: "button is-info" %>
		  </div>
		<% end %>

		<%= render "users/shared/links" %>
	</div>
</section>
