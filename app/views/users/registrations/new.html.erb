<% provide(title: "Sign up") %>
<section class="hero is-light is-bold">
  <div class="hero-body">
    <h2 class="title">Register</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "off", placeholder: "e.g. John Doe", class: "input is-info left-field" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autocomplete: "email", placeholder: "e.g. john.doe@gmail.com", class: "input is-info left-field" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Your Password Here", class: "input is-info left-field" %>
          <p class="help">6 character minimum</p>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "input is-info left-field" %>
        </div>

        <div class="control">
          <%= f.submit "Sign up", class: "button is-info" %>
        </div>
      <% end %>

    <%= render "users/shared/links" %>
  </div>
</section>
