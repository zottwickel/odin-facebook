<% provide(title: "Edit profile") %>

<section class="hero is-light is-bold">
  <div class="hero-body">
    <h2 class="title">Edit Profile</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "input is-info left-field" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autocomplete: "email", class: "input is-info left-field" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "off", class: "input is-info left-field" %>
        <p class="help">6 character minimum</p>
      </div>

      <div class="field">
        <%= f.label, class: "label" :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input is-info left-field" %>
      </div>

      <div class="field">
        <%= f.label, class: "label" :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: "input is-info left-field" %>
      </div>

      <div class="control">
        <%= f.submit "Update", class: "button is-info" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-info" %></p>

    <%= link_to "Back", :back %>
  </div>
</section>
