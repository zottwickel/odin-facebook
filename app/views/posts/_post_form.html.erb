<div class="left-field">
	<%= form_for :post, method: :post do |f| %>

		<div class="field">
			<%= f.label :title, class: "label" %>
			<div class="control">
				<%= f.text_field :title, placeholder: "e.g. Trump is the worst", class: "input is-info" %>
			</div>
		</div>

		<div class="field">
			<div class="control">
				<%= f.text_area :body, placeholder: "e.g. Trump is the worst because he tweets stuff instead of running the country", class: "textarea is-info" %>
			</div>
		</div>

		<div class="control">
			<%= f.submit "post", class: "button is-info" %>
		</div>
	<% end %>
</div

